<Window x:Class="WpfApp1.TrayContextMenu"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Context Menu"
    ResizeMode="NoResize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto" ShowInTaskbar="False" ForceCursor="True" Topmost="True" Deactivated="Window_Deactivated" AutomationProperties.IsOffscreenBehavior="Onscreen" SizeToContent="WidthAndHeight" ShowActivated="False" WindowStyle="None" HorizontalAlignment="Left" VerticalAlignment="Top" SnapsToDevicePixels="True" Height="127" Width="257">
    

    <Border BorderBrush="#FF3D3D40" BorderThickness="2">
        <StackPanel Orientation="Vertical" d:LayoutOverrides="Width" Margin="-2,-2,-2,-2" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button
                    x:Name="btnShow"
                    Click="btnShow_Click"
                    Content="Show Window" Padding="5,1,5,1" Height="30"  ForceCursor="True" Width="115" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" ScrollViewer.VerticalScrollBarVisibility="Disabled"  />
            <Button
                    x:Name="btnExit"
                    Click="btnExit_Click"
                    Content="Exit" Padding="5,1,5,1" Height="30" Width="115"  />
        </StackPanel>
    </Border>
</Window>
